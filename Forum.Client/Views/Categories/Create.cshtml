@model Forum.Client.Models.CreateCategoryViewModel

@{
    ViewData["Title"] = "Nova Categoria";
}

<h1>Criar nova categoria</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="SectionId" asp-items="@Model.SectionsAvailable">
                    <option value="">Selecione uma seção</option>
                </select>
                <span asp-validation-for="SectionId" class="text-danger"></span><br />
                <a asp-action="Create" asp-controller="Sections">Não tem a seção que deseja? Crie uma!</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar categoria" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

