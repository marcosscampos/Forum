@model Topic
@{
    ViewData["Title"] = "Details";
}
<div clas="list-group">
    <h1>@Model.Title</h1>
    Criado às: @Model.CreatedAt
    <p>@Model.Content</p>
</div>


<section class="list-group">
    @foreach (var reply in Model.Replies)
    {
        <article class="list-group-item">
            <h4>@reply.Title</h4>
            <p>@reply.Content</p>
            <div>
                <time>@reply.CreatedAt</time>
            </div>
        </article>
    }
    <br/>
    <a asp-action="Create" asp-controller="Replies" asp-route-topicId="@Model.Id" class="badge badge-light">
        Responder
    </a>
</section>

<style>
    .list-group-item {
        border-radius: 10px !important;
        margin-top: 9px;
    }

    .badge {
        width: 100px;
        height: 20px;
    }
</style>